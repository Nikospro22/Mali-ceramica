<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Biología Interactiva</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    .bubble {
      @apply w-32 h-32 flex items-center justify-center rounded-full bg-blue-500 text-white font-bold text-center shadow-lg cursor-pointer transition-transform duration-300;
    }
    .bubble:hover {
      @apply scale-110 bg-blue-600;
    }
    .explanation {
      @apply mt-4 p-4 bg-blue-100 border-l-4 border-blue-500 rounded-md text-blue-800;
    }
  </style>
</head>
<body class="bg-blue-50 min-h-screen font-sans">
  <header class="bg-blue-600 text-white text-2xl font-bold py-4 text-center shadow-md">
    Biología Interactiva
  </header>

  <main class="flex flex-col md:flex-row">
    <!-- Menú -->
    <nav class="bg-blue-700 text-white w-full md:w-60 p-4 flex md:flex-col gap-2">
      <button class="nav-btn bg-blue-500 px-4 py-2 rounded" data-section="transporte">Transporte Celular</button>
      <button class="nav-btn bg-blue-500 px-4 py-2 rounded" data-section="fotosintesis">Fotosíntesis</button>
      <button class="nav-btn bg-blue-500 px-4 py-2 rounded" data-section="respiracion">Respiración de la Planta</button>
      <button class="nav-btn bg-blue-500 px-4 py-2 rounded" data-section="biomoleculas">Biomoléculas</button>
      <button class="nav-btn bg-blue-500 px-4 py-2 rounded" data-section="metabolismo">Metabolismo Celular</button>
    </nav>

    <!-- Contenido dinámico -->
    <section class="flex-1 p-6" id="contenido">
      <h2 class="text-xl font-bold text-blue-700 mb-4">Seleccioná un tema para comenzar</h2>
    </section>
  </main>

  <script>
    const secciones = {
      transporte: {
        titulo: "Transporte Celular",
        burbujas: [
          { texto: "Pasivo", desc: "Movimiento de sustancias sin gasto de energía, como la difusión y la ósmosis." },
          { texto: "Activo", desc: "Movimiento en contra del gradiente de concentración con gasto de energía (ATP)." }
        ]
      },
      fotosintesis: {
        titulo: "Fotosíntesis",
        burbujas: [
          { texto: "Etapa Lumínica", desc: "Ocurre en los tilacoides. La luz solar se usa para dividir agua y liberar oxígeno." },
          { texto: "Etapa Oscura", desc: "Ocurre en el estroma. Se usa CO₂ y energía para formar glucosa." }
        ]
      },
      respiracion: {
        titulo: "Respiración de la Planta",
        burbujas: [
          { texto: "Aeróbica", desc: "Utiliza oxígeno para descomponer glucosa y liberar energía (ATP)." },
          { texto: "Mitocondria", desc: "La respiración celular ocurre principalmente en las mitocondrias de las células vegetales." }
        ]
      },
      biomoleculas: {
        titulo: "Biomoléculas",
        burbujas: [
          { texto: "Proteínas", desc: "Participan en funciones estructurales, enzimáticas y de transporte." },
          { texto: "Lípidos", desc: "Almacenan energía y forman parte de la membrana celular." },
          { texto: "Carbohidratos", desc: "Fuente principal de energía para las células." },
          { texto: "Ácidos Nucleicos", desc: "Contienen la información genética (ADN y ARN)." }
        ]
      },
      metabolismo: {
        titulo: "Metabolismo Celular",
        burbujas: [
          { texto: "Anabolismo", desc: "Síntesis de moléculas complejas a partir de simples, requiere energía." },
          { texto: "Catabolismo", desc: "Descomposición de moléculas complejas para liberar energía." }
        ]
      }
    };

    const contenido = document.getElementById("contenido");
    const botones = document.querySelectorAll(".nav-btn");

    botones.forEach(btn => {
      btn.addEventListener("click", () => {
        const seccion = secciones[btn.dataset.section];
        mostrarSeccion(seccion);
      });
    });

    function mostrarSeccion(seccion) {
      let html = `<h2 class="text-2xl font-bold text-blue-700 mb-4">${seccion.titulo}</h2>`;
      html += `<div class="flex flex-wrap gap-4">`;

      seccion.burbujas.forEach((burb, i) => {
        html += `
          <div class="bubble" onclick="mostrarExplicacion('${i}')">${burb.texto}</div>
        `;
      });

      html += `</div><div id="explicacion" class="explanation mt-6 hidden"></div>`;
      contenido.innerHTML = html;

      window.mostrarExplicacion = (i) => {
        const desc = seccion.burbujas[i].desc;
        document.getElementById("explicacion").classList.remove("hidden");
        document.getElementById("explicacion").innerText = desc;
      };
    }
  </script>
</body>
</html>
